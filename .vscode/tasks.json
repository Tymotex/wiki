{
    "version": "2.0.0",
    "tasks": [
        // Launch the dev server in a split window with a Zsh instance on the
        // right side.
        {
            "label": "Dev Server",
            "type": "shell",
            // The command is written this way as a workaround to VSCode
            // forcefully closing terminals after tasks complete.
            // Sourced from: https://stackoverflow.com/questions/59067229/how-to-re-use-a-vs-code-task-window-without-closing-it.
            "command": "bash -c 'make serve; exec zsh'",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "echo": true,
                "focus": false,
                "group": "development"
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
        },
        {
            "label": "Dev Shell",
            "type": "shell",
            "command": "zsh",
            "presentation": {
                "panel": "new",
                "echo": true,
                "focus": true,
                "group": "development",
                "showReuseMessage": false
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
        },
    ]
}